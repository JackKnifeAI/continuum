# Sentry Configuration Template
# Copy to .env and fill in your values
# DO NOT commit .env to git!

# =============================================================================
# REQUIRED: Sentry DSN
# =============================================================================
# Get this from: https://sentry.io/settings/{org}/projects/{project}/keys/
SENTRY_DSN="https://your-key@o123456.ingest.sentry.io/123456"

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Environment name (development, staging, production)
CONTINUUM_ENV="production"

# Release version (auto-detected from git if not set)
# Format: v{version} or git-{commit}
CONTINUUM_RELEASE="v0.2.0"

# Server/instance name for identification
CONTINUUM_SERVER_NAME="continuum-prod-1"

# =============================================================================
# SAMPLING RATES
# =============================================================================
# Error sampling rate (0.0-1.0)
# 1.0 = capture all errors, 0.1 = capture 10%
# Recommended: 1.0 for production (errors are rare)
SENTRY_SAMPLE_RATE="1.0"

# Performance trace sampling rate (0.0-1.0)
# 1.0 = track all transactions, 0.1 = track 10%
# Recommended: 0.1 for production (reduces overhead)
SENTRY_TRACES_SAMPLE_RATE="0.1"

# =============================================================================
# OPTIONAL: Sentry CLI (for release management)
# =============================================================================
# Get this from: https://sentry.io/settings/account/api/auth-tokens/
# SENTRY_AUTH_TOKEN="your-auth-token"

# Sentry organization slug
# SENTRY_ORG="jackknifeai"

# Sentry project slug
# SENTRY_PROJECT="continuum"

# =============================================================================
# OTHER CONTINUUM SETTINGS
# =============================================================================
# Tenant ID (for multi-tenant deployments)
CONTINUUM_TENANT="default"

# CORS origins (comma-separated)
CONTINUUM_CORS_ORIGINS="http://localhost:3000,https://app.example.com"

# Redis cache (optional)
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_PASSWORD=""
# CONTINUUM_CACHE_ENABLED="true"
