{
  "name": "continuum-browser-extension",
  "version": "1.0.0",
  "description": "CONTINUUM browser extension for AI-powered memory capture and recall",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "dev:chrome": "npm run dev -- --env browser=chrome",
    "dev:firefox": "npm run dev -- --env browser=firefox",
    "dev:edge": "npm run dev -- --env browser=edge",
    "build": "webpack --mode production",
    "build:chrome": "npm run build -- --env browser=chrome",
    "build:firefox": "npm run build -- --env browser=firefox",
    "build:edge": "npm run build -- --env browser=edge",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:edge",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "package:chrome": "node scripts/package.js chrome",
    "package:firefox": "node scripts/package.js firefox",
    "package:edge": "node scripts/package.js edge",
    "package:all": "npm run package:chrome && npm run package:firefox && npm run package:edge"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0",
    "zustand": "^4.4.7",
    "date-fns": "^2.30.0",
    "dompurify": "^3.0.6",
    "marked": "^9.1.6"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "puppeteer": "^21.5.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "zip-webpack-plugin": "^4.0.1"
  },
  "browserslist": [
    "Chrome >= 109",
    "Firefox >= 109",
    "Edge >= 109"
  ]
}
