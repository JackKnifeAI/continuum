# CONTINUUM Memory System - Environment Configuration
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control!

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Environment (development, staging, production)
CONTINUUM_ENV=development

# Default tenant ID
CONTINUUM_TENANT=default

# Instance ID (auto-generated if not set)
# CONTINUUM_INSTANCE_ID=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (relative to project root)
CONTINUUM_DB_PATH=./continuum_data/memory.db

# Database timeout (seconds)
CONTINUUM_DB_TIMEOUT=30.0

# Enable database encryption (requires sqlcipher)
CONTINUUM_ENCRYPT_DB=false

# Database encryption key (REQUIRED if CONTINUUM_ENCRYPT_DB=true)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# CONTINUUM_DB_KEY=

# =============================================================================
# POSTGRESQL (Optional - for production deployments)
# =============================================================================

# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=continuum
# POSTGRES_USER=continuum_user
# POSTGRES_PASSWORD=changeme_generate_strong_password
# POSTGRES_SSL_MODE=require

# =============================================================================
# API SECURITY
# =============================================================================

# Require API key authentication
CONTINUUM_REQUIRE_API_KEY=true

# Secret key for signing/encryption (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
CONTINUUM_SECRET_KEY=changeme_generate_with_secrets_module

# JWT secret for admin session tokens (optional - auto-generated if not set)
# By default, stored in ~/.continuum/jwt_secret for persistence
# Set this in production to use your own secret
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# CONTINUUM_JWT_SECRET=

# CORS allowed origins (comma-separated)
# For production, list your actual domains
CONTINUUM_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limiting
CONTINUUM_RATE_LIMIT_ENABLED=false

# Redis URL for distributed rate limiting (optional)
# CONTINUUM_REDIS_URL=redis://localhost:6379/0

# Rate limits (requests per minute)
CONTINUUM_RATE_LIMIT_DEFAULT=60
CONTINUUM_RATE_LIMIT_FEDERATION=10

# =============================================================================
# EMBEDDING PROVIDERS
# =============================================================================

# OpenAI API key (optional - for OpenAI embeddings)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# =============================================================================
# FEDERATION
# =============================================================================

# Federation node ID (auto-generated if not set)
# CONTINUUM_NODE_ID=

# Federation server host
# CONTINUUM_FEDERATION_HOST=0.0.0.0

# Federation server port
# CONTINUUM_FEDERATION_PORT=8000

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
CONTINUUM_LOG_LEVEL=INFO

# Log directory
CONTINUUM_LOG_DIR=./continuum_data/logs

# Enable audit logging
CONTINUUM_AUDIT_LOG_ENABLED=false

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Prometheus metrics endpoint
# CONTINUUM_METRICS_ENABLED=false
# CONTINUUM_METRICS_PORT=9090

# =============================================================================
# STRIPE BILLING
# =============================================================================

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
# Use test keys (pk_test_, sk_test_) for development
# Use live keys (pk_live_, sk_live_) for production
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Stripe webhook signing secret (from webhook endpoint configuration)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs (create in Stripe dashboard)
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_PRO=price_pro_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_custom

# Direct Stripe Payment Links (for dashboard - create in Stripe Payment Links)
# These are displayed in the dashboard for one-click payments
# Create at: https://dashboard.stripe.com/payment-links
# STRIPE_DONATE_URL=https://buy.stripe.com/your_donate_link
# STRIPE_PRO_URL=https://buy.stripe.com/your_pro_upgrade_link
# STRIPE_ENTERPRISE_URL=mailto:enterprise@yourdomain.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (NEVER in production!)
CONTINUUM_DEBUG=false

# Hot reload (development only)
CONTINUUM_RELOAD=false

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# 1. Generate strong secrets:
#    python -c "import secrets; print(secrets.token_hex(32))"
#
# 2. Use unique passwords for each environment
#
# 3. Never commit .env to version control
#    Add .env to .gitignore
#
# 4. Rotate secrets regularly (quarterly recommended)
#
# 5. For production, consider using a secrets manager:
#    - HashiCorp Vault
#    - AWS Secrets Manager
#    - Azure Key Vault
#    - Google Cloud Secret Manager
#
# 6. Restrict file permissions:
#    chmod 600 .env
#
# =============================================================================
